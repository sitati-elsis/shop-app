{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "semi": ["error", "always"],  // Ensure semicolons are added
      "quotes": ["error", "double"], // Use double quotes
      "prettier/prettier": [
        "error",
        {
          "semi": true,
          "singleQuote": false,
          "tabWidth": 2,
          "trailingComma": "es5",
          "printWidth": 80
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  